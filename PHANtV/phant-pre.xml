<tool id="phant-pre" name="PHANt-pre" version="2.3">
    <description>Preparation for Collapse Collection</description>
    <!-- basic error handling -->
    <stdio>
        <!-- Assume anything other than zero is an error -->
        <exit_code range="1:" level="fatal" description="Tool exception" />
        <exit_code range=":-1" level="fatal" description="Tool exception" />
    </stdio>
    <command>
<![CDATA[
    #if str( $input_pc.forward.name[0:15] ) == "fileForwardList":
      cat $input_pc.forward > $phants_filename
    #else:
      echo '$input_pc.forward' > $phants_filename
    #end if
]]>
    </command>

    <inputs>
        <param name="input_pc" type="data_collection" format="fastqsanger" collection_type="paired" label="Paired-end FASTQ collection" help="Paired-end FASTQ collection" />
    </inputs>

    <outputs>
        <data name="phants_filename" format="tabular" label="${input_pc.forward.name}" ></data>
   </outputs>
</tool>
