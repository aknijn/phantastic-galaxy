<tool id="phantw" name="PHANtW" version="2.3">
    <description>SNP Observer</description>
    <requirements>
        <requirement type="package" version="3.9">python</requirement>
        <requirement type="package" version="1.7.0">pp-sketchlib</requirement>
        <requirement type="package" version="4.4.0">dendropy</requirement>
        <requirement type="package" version="0.8.27">hdbscan</requirement>
        <requirement type="package" version="3.4.2">matplotlib</requirement>
        <requirement type="package" version="2.35">graph-tool</requirement>
        <requirement type="package" version="1.19.5">numpy</requirement>
        <requirement type="package" version="1.2.4">pandas</requirement>
        <requirement type="package" version="0.24.2">scikit-learn</requirement>
        <requirement type="package" version="1.6.3">scipy</requirement>
        <requirement type="package" version="0.3.5">sharedmem</requirement>
        <requirement type="package" version="2.4.0">poppunk</requirement>
    </requirements>
    <!-- basic error handling -->
    <stdio>
        <!-- Assume anything other than zero is an error -->
        <exit_code range="1:" level="fatal" description="Tool exception" />
        <exit_code range=":-1" level="fatal" description="Tool exception" />
    </stdio>
    <command>
<![CDATA[
    perl
      $__tool_directory__/PHANtW.pl
      $phantw_filenames
      $phantw_cl
      $phantw_tree
]]>
    </command>

    <inputs>
        <param name="phantw_filenames" format="tabular" type="data" label="filenames" />
    </inputs>

    <!-- define outputs -->
    <outputs>
        <data name="phantw_tree" format="nwk" label="${tool.name} on ${on_string}: clustering" ></data>
        <data name="phantw_cl" format="csv" label="${tool.name} on ${on_string}: clusters" ></data>
   </outputs>
</tool>
